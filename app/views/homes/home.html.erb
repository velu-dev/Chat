<div class="container">
<div class="profile">
<%if current_user.profile_pic.present?%>
<%=image_tag current_user.profile_pic, :class=>"profile"%>
<%elsif current_user.gender =="Male"%>
<%=image_tag 'male.png', :class=>"profile"%>
<%else%>
<%=image_tag 'female.png', :class=>"profile"%>
 
<style>
  .profile{
    border-radius: 25px;
  }
</style>
<%end%>

<div>
  <label><strong>Name:</strong></label>&nbsp&nbsp<%=current_user.fname%>
</div>
<div>
  <label><strong>Email-ID:</strong></label>&nbsp&nbsp<i>&nbsp<%=current_user.email%></i>
</div>
<div>
  <label><strong>Mobile:</strong></label>&nbsp&nbsp<%=current_user.mobile%>
</div>
<br>
<%=link_to "View Profile", homes_profile_path%>
<%=link_to "Enter Chat Room", chat_rooms_path%>
</div>
<div class="chat">
    <%@user.map do|ii|%>
    <%if ii.email == current_user.email%>
        <%=link_to "View My Message", chat_manage_profile_path(ii.id)%><font id="chat">.</font><br>
        <%else%>
    <%=link_to ii.email, chat_manage_profile_path(ii.id)%><font id="chat">.</font><br>
    <%end%>
    <%end%>
</div>
</div>
