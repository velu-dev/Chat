    <ul class="navbar-nav">
      <li class="nav-item active ">
        <%=link_to "Home", homes_home_path%><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        <%=link_to "Enter Chat App", chat_rooms_path%>
      </li>
      <li class="nav-item">
        <%=link_to "Contact", emails_path%>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link1 nav-item dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Profile
        </a>
        <div class="dropdown-menu">
          <%=link_to "View Profile", homes_profile_path%><br>
          <% if user_signed_in? %>
        <%=link_to 'Log out', destroy_user_session_path, method: :delete %>
        <%# @current_user.update(status: false)%> <span>Log out</span>
        <%#end%>
      <% end %>
        </div>
      </li>
    </ul>
  </div>
</nav>
</div>


  
