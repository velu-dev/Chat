<div class="container">
<h1><%= @chat_room.title %></h1>
<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>
<%if current_user.email=="velusamyvnp@gmail.com"%>
<%=link_to "Clear Messages",chat_rooms_delete_path(@chat_room.id)%>
<%end%>

<hr>

<%= form_for @message, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', :required => true%>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>

  <%= f.button "Post", class: 'btn btn-primary', :style=> 'float: right;'%>
<% end %>
</div>
